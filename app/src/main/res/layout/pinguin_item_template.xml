<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background=""
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:src="@color/purple_200"
        android:id="@+id/penguin_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="300dp"
        />

    <TextView
        android:id="@+id/penguin_name"
        tools:text="Penguin Name"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/penguin_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/eats"
        android:text="@string/eats"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/penguin_name"
        app:layout_constraintStart_toEndOf="@id/penguin_image"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/height"
        android:text="@string/height"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/eat_information"
        app:layout_constraintStart_toEndOf="@id/penguin_image"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/eat_information"
        tools:text="eat temp text"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/eats"
        app:layout_constraintTop_toBottomOf="@id/penguin_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"

        />

    <TextView
        android:id="@+id/height_information"
        tools:text="XXX"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/eat_information"
        app:layout_constraintStart_toEndOf="@id/height"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="170dp"
        android:layout_marginTop="8dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>